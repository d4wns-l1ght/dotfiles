# theme
include ~/.config/newsboat/dark

browser firefox
bind m everywhere set browser "iina %u"; open-in-browser ; set browser "firefox %u"
# bindings
unbind-key h
unbind-key j
unbind-key k
unbind-key l
unbind-key g
unbind-key G

bind h everywhere quit
bind j everywhere down
bind k everywhere up
bind l everywhere open
bind g everywhere home
bind G everywhere end

